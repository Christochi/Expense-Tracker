<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background = "@android:color/darker_gray"
    android:orientation = "vertical">

    <!-- Linear layout contains TextView and EditText View -->
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        android:background = "#FFFFFF"
        android:layout_margin = "16dp">

        <!-- Name Text View -->
        <TextView
            android:layout_width = "match_parent"
            android:layout_height= "wrap_content"
            android:text = "name"
            android:textAllCaps = "true"
            android:textStyle = "bold"
            android:textAppearance = "?android:textAppearanceMedium"
            android:textColor = "@android:color/holo_blue_dark"
            android:layout_marginTop = "16dp"
            android:layout_marginLeft = "16dp" />

        <!-- edit text view for inputting name of expense -->
        <EditText
            android:id="@+id/name"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = " Name of Expense"
            android:maxLength = "20"
            android:maxLines = "1"
            android:inputType = "text|textCapSentences"
            android:textColorHint="@android:color/darker_gray"
            android:textColor = "#000000"
            android:layout_marginLeft = "8dp"/>
    </LinearLayout>

    <!-- Linear layout contains TextView and EditText View -->
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        android:background = "#FFFFFF"
        android:layout_marginLeft = "16dp"
        android:layout_marginRight = "16dp"
        android:layout_marginBottom = "16dp">

        <!-- amount Text View -->
        <TextView
            android:layout_width = "match_parent"
            android:layout_height= "wrap_content"
            android:text = "Type of Amount"
            android:textAllCaps = "true"
            android:textStyle = "bold"
            android:textAppearance = "?android:textAppearanceMedium"
            android:textColor = "@android:color/holo_blue_dark"
            android:layout_marginTop = "16dp"
            android:layout_marginLeft = "16dp" />

        <!-- edit text view for inputting amount -->
        <EditText
            android:id="@+id/amount"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = " Type Amount"
            android:inputType = "numberDecimal"
            android:textColorHint="@android:color/darker_gray"
            android:textColor = "#000000"
            android:layout_marginLeft = "8dp"/>
    </LinearLayout>

    <!-- Linear layout contains text view and spinner -->
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        android:background = "#FFFFFF"
        android:layout_marginLeft = "16dp"
        android:layout_marginRight = "16dp"
        android:layout_marginBottom = "16dp">

        <!-- category text view -->
        <TextView
            android:layout_width = "match_parent"
            android:layout_height= "wrap_content"
            android:text = "category"
            android:textAllCaps = "true"
            android:textStyle = "bold"
            android:textAppearance = "?android:textAppearanceMedium"
            android:textColor = "@android:color/holo_blue_dark"
            android:layout_marginTop = "16dp"
            android:layout_marginLeft = "16dp" />

        <!-- category drop down list -->
        <Spinner
            android:id="@+id/category"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:entries = "@array/category_arrays"
            android:prompt = "@string/category_prompt"
            android:layout_marginLeft = "8dp"
            android:layout_marginTop = "16dp"
            android:layout_marginBottom = "8dp" >
        </Spinner>
    </LinearLayout>

